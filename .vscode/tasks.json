{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "compile",
			"command": "sh ./build.sh",
			"options": {
				"cwd": "${workspaceFolder}/"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
		},
		{
			"type": "shell",
			"label": "import",
			"command": "${workspaceFolder}/../../Godot_v4.5.1-stable_linux.x86_64 --import --headless",
			"options": {
				"cwd": "${workspaceFolder}/"
			},
			"group": {
				"kind": "build",
			},
		},
		{
			"label": "build",
			"dependsOn": [
				"compile",
				"import"
			]
		}
	]
}